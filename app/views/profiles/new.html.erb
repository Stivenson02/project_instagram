<div class="container mx-auto">
  <div class="flex justify-center px-6 my-12">
    <!-- Row -->
    <div class="w-full xl:w-3/4 lg:w-11/12 flex">
      <!-- Col -->
      <div
        class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
        style="background-image: url('https://source.unsplash.com/Mv9hjnEUHR4/600x800')"
      ></div>
      <!-- Col -->
      <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
        <h3 class="font-bold pt-4 text-2xl text-center">Add information!</h3>

        <%= render "form", profile: @profile %>
        <div class="px-2 pt-2 pb-2 mb-2 bg-white rounded text-center">
          <%= link_to 'Back to profiles', profiles_path, class: "px-8 py-2 font-bold text-white bg-gray-300 rounded-full hover:bg-gray-500 focus:outline-none focus:shadow-outline" %>
        </div>

      </div>
    </div>
  </div>
</div>