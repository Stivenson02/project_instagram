<%= form_with(model: profile, class: "px-8 pt-6 pb-8 mb-4 bg-white rounded") do |form|  %>
  <% if profile.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4 md:flex md:justify-between">
    <div class="mb-4 md:mr-2 md:mb-0">
      <%= form.label :username, class:"block mb-2 text-sm font-bold text-gray-700" %>
      <%= form.text_field :username, placeholder: :username,  class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="md:ml-2">
      <%= form.label :phone_number, class:"block mb-2 text-sm font-bold text-gray-700" %>
      <%= form.number_field :phone_number, placeholder: :phone_number, class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
  <div class="mb-4">
    <%= form.label :description, class:"block mb-2 text-sm font-bold text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :avatar, class:"block mb-2 text-sm font-bold text-gray-700" %>
    <%= form.file_field :avatar, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>



